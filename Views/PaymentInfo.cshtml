@using Nop.Plugin.Payments.PagarMe.Services;
@model PaymentInfoModel

<script>
    function changedPayMethod(event) {
        var dividers = document.getElementsByClassName('ctrl-paymethod');
        console.log(dividers)
        for (var i = 0; i < dividers.length; i++) {
            dividers[i].classList.add('hidden');
        }
        var paymethod = document.getElementsByClassName(event.target.value);
        console.log(paymethod);
        for (var i = 0; i < paymethod.length; i++) {
            paymethod[i].classList.remove('hidden');
        }
    }
    $(document).ready(function () {
        let frame = document.getElementById("frame-checkout");
        frame.src = $("#checkout").val();
    })
</script>

@if (Model.UrlCheckout != null && !Model.UrlCheckout.Equals(""))
{
    <iframe id="frame-checkout" src="@Model.UrlCheckout" style="width: 100% !important; height: 800px !important; border: none !important" seamless></iframe>
}

<input type="hidden" asp-for="Errors" />
<input type="text" class="hidden" asp-for="UrlCheckout" id="checkout" />

<style>
    .hidden {
        opacity: 0;
        position: absolute;
    }

    input {
        border-radius: 8px !important;
    }

    select {
        border-radius: 8px !important;
    }

    .payment-info-next-step-button {
        opacity: 0 !important;
    }

</style>